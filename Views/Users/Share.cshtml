@* Share Page *@
@{
    ViewData["Title"] = "Share";
}

@model ShareViewModel
@* share page *@
<h1 class="text-center m-4"><em class="text-secondary">Share Experiences!</em></h1>
<div>
  
    
    
</div>
<div class="d-flex justify-content-around">
    @* Posts *@
    <div class="card p-3 m-2 w-33">
        <div class="container text-center px-2">
            <h1 class="display-4"><em class="text-info">Posts</em></h1>
            <div class="mb-3"><a href="/posts/new">Create Post</a> </div>
                <div class="mt-5">
                    <hr width="100%"/><br>
                    <table class="card bg-light">
                        
                        <thead>
                            <tr class="d-flex justify-content-around">
                                <th class="w-33">Subject</th>
                                <th class="w-33">Message</th>
                                <th class="w-33">Date Posted</th>
                            </tr>
                        </thead>
                        @foreach (var post in Model.Posts)
                        {
                            <tr class="d-flex justify-content-around">
                                @* TODO: Link post to view one page *@
                                <td class="w-25">@post.Subject</td>
                                <td class="w-25">@post.Message</td>
                                <td class="w-25">@post.CreatedAt.ToString("dd MMMM yyyy")</td>
                                @* TODO: Add edit/delete button *@
                                @* TODO: add comments *@
                                @* TODO: add comment form *@
                            </tr>
                        }
                    </table>
                </div>
        </div>
    </div>
    @* Reviews *@
    <div class="card p-3 m-2 w-33">
        <div class="container text-center px-2">
            <h1 class="display-4"><em class="text-info">Reviews</em></h1>
             <div class="mb-3"><a href="/reviews/new">Create Review</a></div>
                <div class="mt-5">
                    <hr width="100%"/><br>
                    <table class="card bg-light">
                        
                        <thead>
                            <tr class="d-flex justify-content-around">
                                <th class="w-33">Rating</th>
                                <th class="w-33">Description</th>
                                <th class="w-33">Date Posted</th>
                            </tr>
                        </thead>
                        @foreach (var review in Model.Reviews)
                        {
                            <tr class="d-flex justify-content-around">
                                @* TODO: Link review to view one page *@
                                <td class="w-25">@review.Rating</td>
                                <td class="w-25">@review.Description</td>
                                <td class="w-25">@review.CreatedAt.ToString("dd MMMM yyyy")</td>
                                @* TODO: Add edit/delete button *@
                            </tr>
                        }
                    </table>
                </div>
        </div>
    </div>
    @* Listings *@
    <div class="card p-3 m-2 w-33">
        <div class="container text-center px-2">
            <h1 class="display-4"><em class="text-info">Listings</em></h1>
             <div class="mb-3"><a href="/listings/new">Create Listing</a> </div>
                
                <div class="mt-5">
                    <hr width="100%"/><br>
                    <table class="card bg-light">
                    
                        
                        <thead>
                            <tr class="d-flex justify-content-around">
                                <th class="w-33">Title</th>
                                <th class="w-33">Description</th>
                                <th class="w-33">Price</th>
                                <th class="w-33">Date Posted</th>
                            </tr>
                        </thead>
                        @foreach (var listing in Model.Listings)
                        {
                            <tr class="d-flex justify-content-around">
                                @* TODO: Link listing to view one page *@
                                <td class="w-25">@listing.Title</td>
                                <td class="w-25">@listing.Description</td>
                                <td class="w-25">@listing.Price</td>
                                <td class="w-25">@listing.CreatedAt.ToString("dd MMMM yyyy")</td>
                                @* TODO: Add edit/delete button *@
                            </tr>
                        }
                    </table>
                </div>
        </div>
    </div>
</div>